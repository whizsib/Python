class Node():
    def __init__ (self, data=None,next=None):
        self.data=data
        self. next=next

class LinkedList():
    def __init__(self):
        self.head=None

    def insert_at_beginning (self, data):
        node=Node(data,self.head)
        self.head=node

    def insert_at_end(self,data):
        if self.head==None:
            self.head=Node(data,None)
            return
        itr=self.head
        while itr.next:
            itr=itr.next
        itr.next=Node (data,None)

    def inserting_values(self,data_list):
        for data in data_list:
            self.insert_at_end(data)

    def get_length(self):
        count=0
        itr=self.head
        while itr:
            count+=1
            itr=itr.next
        print("The length of the Linked list is "+ str(count))
        return count

    def remove_at(self, index):
        self.index=index
        if index<0 or index >= self.get_length():
            raise Exception ("wrong value entered")
        if index==0:
            self.head=self.head.next
            return
        itr=self.head
        count=0
        while itr:
            if count==index-1:
                itr.next=itr.next.next
                break
            count+=1
            itr=itr.next

    def remove_value (self, value):
        self.value=value
        itr=self.head
        count=0
        value_number=0
        while itr:
            if itr.data==value:
                self.remove_at(count)
                value_number+=1
            count+=1
            itr=itr.next
        if value_number==0:
            print("value not found")

    def insert_after_value(self,value,after_value):
        self.value=value
        self.after_value=after_value
        itr=self.head
        while itr:
            if itr.data==after_value:
                itr.next= Node(value,itr.next.next)
                break
            itr=itr.next


    def print(self):
        if self.head==None:
            print("This is an empty linked list")
        itr=self.head
        llstr=""
        while itr :
            llstr=llstr + str(itr.data)+ "-->"
            itr=itr.next
        print(llstr)
ll=LinkedList()
ll.insert_at_beginning(56)
ll.insert_at_beginning(78)
ll.insert_at_end(67)
ll.insert_at_beginning(67)
ll.insert_at_end(34)
ll.insert_at_beginning(784)
ll.insert_at_end("pink")
ll.inserting_values(["apple","Orange", "banana"])
ll.print()
ll.insert_after_value(365,78)
ll.print()
